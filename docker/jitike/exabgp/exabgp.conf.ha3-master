neighbor 10.35.35.40 {
	router-id 10.35.35.70;
	local-address 10.35.35.70;
	local-as 65047;
	peer-as 65040;

	api services {
		processes [ watch-loghost ];
	}
}

process watch-loghost {
	encoder text;
	run python -m exabgp healthcheck --cmd "ipsec statusall" --no-syslog --label loghost --dynamic-ip-setup --withdraw-on-down --ip 10.15.15.15/32 --next-hop=10.35.35.70;
}
