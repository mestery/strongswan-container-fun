FROM debian:stable
MAINTAINER mestery@mestery.com
#MAINTAINER Pier Carlo Chiodi <pierky@pierky.com>

EXPOSE 179

RUN apt-get update && apt-get install -y \
        autoconf \
	bison \
	build-essential \
	curl \
	flex \
	libreadline-dev \
	libncurses5-dev \
	m4 \
	unzip \
	gawk \
	libtool \
	telnet \
	net-tools \
	procps

WORKDIR /root
RUN curl -O -L http://download.savannah.gnu.org/releases/quagga/quagga-1.1.1.tar.gz
RUN curl -O -L https://ftp.gnu.org/gnu/automake/automake-1.15.tar.gz
RUN tar -zxvf quagga-1.1.1.tar.gz
RUN tar -zxvf automake-1.15.tar.gz

RUN useradd -M quagga

# This directory must be mounted as a local volume with '-v `pwd`/quagga:/etc/quagga:rw' docker's command line option.
# The host's file at `pwd`/quagga/quagga.conf is used as the configuration file for Quagga BGPD.
RUN mkdir /etc/quagga && \
	mkdir /var/run/quagga && \
	chown quagga /etc/quagga && \
	chown quagga /var/run/quagga

RUN cd automake-1.15 && \
	./configure && \
	make && \
	make install

RUN cd quagga-1.1.1 && \
	./configure --disable-doc --enable-multipath=64 && \
	make && \
	make install

RUN ldconfig

#RUN /usr/local/sbin/zebra --config_file=/etc/quagga/zebra.conf --pid_file=/var/run/quagga/zebra.conf -d

CMD /usr/local/sbin/zebra --config_file=/etc/quagga/zebra.conf --pid_file=/var/run/quagga/zebra.pid --socket /var/run/quagga/Z.sock -d && \
    /usr/local/sbin/bgpd --config_file=/etc/quagga/quagga.conf --pid_file=/var/run/quagga/quagga.pid --socket /var/run/quagga/Z.sock
