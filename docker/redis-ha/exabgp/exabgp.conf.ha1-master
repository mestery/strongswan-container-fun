neighbor 10.35.35.40 {
	router-id 10.35.35.50;
	local-address 10.35.35.50;
	local-as 65040;
	peer-as 65040;

	api services {
		processes [ watch-loghost ];
	}
}

process watch-loghost {
	encoder text;
	run python -m exabgp healthcheck --cmd "ls /" --no-syslog --label loghost --withdraw-on-down --ip 10.15.15.15/32 --next-hop=10.35.35.52;
}
