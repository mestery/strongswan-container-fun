DOCKER_REDIS_STRONGSWAN=strongswan-container-fun/redis-ha-strongswan
DOCKER_REDIS_VPNSERVER_1=strongswan-container-fun/redis-ha-vpnserver-1
DOCKER_REDIS_VPNSERVER_2=strongswan-container-fun/redis-ha-vpnserver-2
DOCKER_REDIS_VPNCLIENT=strongswan-container-fun/redis-ha-vpnclient
DOCKER_REDIS_FAREND=strongswan-container-fun/redis-ha-farend

# The StrongSwan repository and commit to use
BA_STRONGSWAN_REPO_URL=https://github.com/mestery/strongswan.git
BA_STRONGSWAN_COMMIT=redis

.PHONY: docker-build-redis-ha-strongswan
docker-build-redis-ha-strongswan: docker-build-base
	@cd docker/redis-ha && ${DOCKERBUILD} -t ${DOCKER_REDIS_STRONGSWAN} -f Dockerfile.strongswan --build-arg STRONGSWAN_REPO_URL=${BA_STRONGSWAN_REPO_URL} --build-arg STRONGSWAN_COMMIT=${BA_STRONGSWAN_COMMIT} .

.PHONY: docker-build-redis-ha
docker-build-redis-ha: docker-build-redis-ha-strongswan
	@cd docker/redis-ha && ${DOCKERBUILD} -t ${DOCKER_REDIS_VPNSERVER_1} -f Dockerfile.ha-vpnserver-1 .
	@cd docker/redis-ha && ${DOCKERBUILD} -t ${DOCKER_REDIS_VPNSERVER_2} -f Dockerfile.ha-vpnserver-2 .
	@cd docker/redis-ha && ${DOCKERBUILD} -t ${DOCKER_REDIS_VPNCLIENT} -f Dockerfile.ha-vpnclient .
	@cd docker/redis-ha && ${DOCKERBUILD} -t ${DOCKER_REDIS_FAREND} -f Dockerfile.ha-farend .

.PHONY: run-redis-ha
run-redis-ha:
	@cd ./docker/redis-ha && ./runme.sh ${DOCKER_REDIS_VPNSERVER_1} ${DOCKER_REDIS_VPNSERVER_2} ${DOCKER_REDIS_VPNCLIENT} ${DOCKER_REDIS_FAREND}

.PHONY: test-redis-ha
test-redis-ha:
	@docker exec -it haclient ping 10.224.226.51 -c 5

.PHONY: remove-redis-ha
remove-redis-ha:
	@docker exec -it ha1 iptables -D INPUT 2
	@docker exec -it ha1 iptables -D INPUT 1
	@docker exec -it ha2 iptables -D INPUT 2
	@docker exec -it ha2 iptables -D INPUT 1
	@docker rm -f redis-farend redis haclient ha1 ha2
